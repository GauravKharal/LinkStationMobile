<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonYellow">
        <item name="android:background">@drawable/button_yellow</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="buttonBlack">
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textColor">#ffdc01</item>
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="links">
        <item name="android:textColor">#8129d9</item>
        <item name="android:fontFamily">@font/space_grotesk</item>

    </style>
    <style name="textbox">
        <item name="android:background">@drawable/textbox</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColorHint">#60000000</item>
        <item name="android:textCursorDrawable">@drawable/textbox_cursor</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/space_mono</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>
    <style name="bottomNavSelected">
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="bottomNav">
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="topBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/top_bar</item>
        <item name="android:paddingHorizontal">20dp</item>

    </style>
    <style name="bottomBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bottom_bar</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Remove the default background -->
        <item name="android:windowNoTitle">true</item> <!-- Remove the default title -->
        <item name="android:padding">0dp</item> <!-- Cancel default padding -->
        <!-- Add more attributes to cancel or override as needed -->
    </style>
    <style name="buttonTransparentWhite">
        <item name="android:background">@drawable/button_transparent_grey</item>
        <item name="android:textColor">#ffdc01</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.LinkStation" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>
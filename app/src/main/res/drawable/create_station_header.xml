<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="5dp"
        android:top="5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#8CEB6B" />
            <stroke android:color="#8CEB6B" android:width="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main shape layer -->
    <item
        android:right="5dp"
        android:bottom="5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#ffffff" />
            <stroke android:color="#ebebeb" android:width="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>

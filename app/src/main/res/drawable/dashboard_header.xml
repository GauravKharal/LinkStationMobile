<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="3dp"
        android:top="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#3d3d3d" />
            <stroke android:color="#3d3d3d" android:width="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main shape layer -->
    <item
        android:right="3dp"
    android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#cbfda9" />
            <stroke android:color="#3d3d3d" android:width="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
